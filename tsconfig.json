{
	"compilerOptions": {
		// "strict": true,
		"rootDir": "source",
		"outDir": "dist",
		"target": "es2019",
		"lib": ["es2019", "dom", "webworker"],
		"module": "esnext",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"declaration": true,
		"skipLibCheck": true,
	},
	"include": [
		"source/**/*.ts",
		"source/**/*.js"
	],
	"exclude": [
		"source/**/_*"
	],
}
