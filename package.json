{
	"name": "cynic",
	"version": "0.1.0-dev.4",
	"description": "dead-simple async run-anywhere js testing framework",
	"license": "ISC",
	"author": "Chase Moskal <chasemoskal@gmail.com",
	"type": "module",
	"module": "dist/cynic.js",
	"main": "dist-cjs/cynic.js",
	"exports": {
		"import": "dist/cynic.js",
		"require": "dist-cjs/cynic.js"
	},
	"files": [
		"dist",
		"source",
		"dist-cjs"
	],
	"bin": {
		"cynic": "dist/cli.js"
	},
	"scripts": {
		"prepare": "run-s clean && run-p compile-esm compile-cjs cjs-package && run-s test",
		"clean": "rimraf dist dist-cjs && mkdirp dist dist-cjs",
		"compile-esm": "tsc",
		"compile-cjs": "tsc -p tsconfig.cjs.json",
		"cjs-package": "echo '{\"type\": \"commonjs\"}' > dist-cjs/package.json",
		"watch": "npm run compile-esm -s -- --watch & npm run compile-cjs -s -- --watch",
		"start": "serve",
		"test": "run-p test-node test-puppeteer",
		"test-node": "node ./dist/cli.js node --label='cynic self-testing suite (node)' dist/internals/cynic.test.js",
		"test-puppeteer": "node ./dist/cli.js puppeteer --label='cynic self-testing suite (puppeteer)' --cynic-path=. dist/internals/cynic.test.js"
	},
	"keywords": [
		"test",
		"tests",
		"testing",
		"testing-framework",
		"test-framework",
		"test-runner",
		"node",
		"browser",
		"puppeteer",
		"typescript"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/chase-moskal/cynic.git"
	},
	"bugs": {
		"url": "https://github.com/chase-moskal/cynic/issues"
	},
	"homepage": "https://github.com/chase-moskal/cynic#readme",
	"devDependencies": {
		"@types/node": "^13.1.8",
		"@types/puppeteer": "^2.0.0",
		"@types/serve-handler": "^6.1.0",
		"mkdirp": "^0.5.1",
		"npm-run-all": "^4.1.5",
		"rimraf": "^3.0.0",
		"serve": "^11.3.0",
		"typescript": "^3.7.4"
	},
	"dependencies": {
		"commander": "^4.1.0",
		"open": "^7.0.0",
		"puppeteer": "^2.0.0",
		"serve-handler": "^6.1.2"
	}
}
